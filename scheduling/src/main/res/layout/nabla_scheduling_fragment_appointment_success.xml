<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlSymmetry"
    >

    <ImageView
        android:id="@+id/nablaAppointmentSuccessImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/nabla_ic_check_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nablaAppointmentSuccessBody"
        app:layout_constraintVertical_chainStyle="packed"
        app:tint="?colorOnBackground"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/nablaAppointmentSuccessBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/nabla_scheduling_success_body"
        app:layout_constraintBottom_toTopOf="@+id/nablaAppointmentSuccessButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="?textAppearanceBodyMedium"
        app:layout_constraintTop_toBottomOf="@id/nablaAppointmentSuccessImage"
        />

    <Button
        android:id="@+id/nablaAppointmentSuccessButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:text="@string/nabla_scheduling_success_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>