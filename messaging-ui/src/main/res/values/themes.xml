<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="nablaHasValidMessagingOverlays" format="boolean" />
    <declare-styleable name="NablaThemeOverlayApplier">
        <attr name="nablaMessagingThemeOverlay" format="reference" />
    </declare-styleable>

    <!-- Theme overlay adding Nabla UI customization attrs with their defaults, see attrs.xml -->
    <style name="Nabla.ThemeOverlay.Messaging" parent="Nabla.ThemeOverlay.Base">
        <item name="nablaHasValidMessagingOverlays">true</item>

        <item name="nablaMessaging_conversationPreviewTitleAppearance">?textAppearanceBodyLarge</item>
        <item name="nablaMessaging_conversationPreviewSubtitleAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationPreviewTimeAppearance">?textAppearanceLabelLarge</item>

        <item name="nablaMessaging_unreadMessagesIndicatorDrawable">@drawable/nabla_ic_unread_dot</item>
        <item name="nablaMessaging_conversationPreviewBackgroundDrawable">@drawable/nabla_conversation_preview_background</item>
        <item name="nablaMessaging_conversationPreviewBackgroundElevation">1dp</item>
        <item name="nablaMessaging_conversationListBackgroundColor">?android:colorBackground</item>
        <item name="nablaMessaging_conversationListHeaderStyle">?toolbarSurfaceStyle</item>
        <item name="nablaMessaging_conversationListEmptyStateTextAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationHeaderTitleAppearance">?textAppearanceTitleMedium</item>
        <item name="nablaMessaging_conversationHeaderSubtitleAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationDateSeparatorAppearance">?textAppearanceLabelMedium</item>
        <item name="nablaMessaging_conversationPatientMessageAppearance">@style/Nabla.TextAppearance.TextMessage.Patient</item>
        <item name="nablaMessaging_conversationProviderMessageAppearance">@style/Nabla.TextAppearance.TextMessage.Provider</item>
        <item name="nablaMessaging_conversationOtherMessageAppearance">@style/Nabla.TextAppearance.TextMessage.Other</item>
        <item name="nablaMessaging_conversationRepliedMessageAuthorAppearance">?textAppearanceTitleSmall</item>
        <item name="nablaMessaging_conversationRepliedMessageBodyAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationDeletedMessageAppearance">?textAppearanceBodyLarge</item>
        <item name="nablaMessaging_conversationMessageAuthorAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationMessageStatusAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_conversationActivityAppearance">?textAppearanceBodyMedium</item>
        <item name="nablaMessaging_patientMessageBackgroundColor">?colorPrimaryDark</item>
        <item name="nablaMessaging_providerMessageBackgroundColor">?colorSurface</item>
        <item name="nablaMessaging_otherMessageBackgroundColor">?colorSurface</item>
        <item name="nablaMessaging_deletedMessageBackgroundColor">?colorSurface</item>
        <item name="nablaMessaging_sendMessageIconTint">@color/nabla_conversation_send_message_selector</item>
        <item name="nablaMessaging_conversationComposerEditTextStyle">
            @style/Nabla.Widget.Messaging.ComposerEditTextStyle
        </item>
        <item name="nablaMessaging_conversationComposerBackground">@drawable/nabla_conversation_composer_background
        </item>

        <item name="nablaMessaging_sendMessageIcon">@drawable/nabla_ic_send</item>
        <item name="nablaMessaging_addMediaIcon">@drawable/nabla_ic_add</item>
        <item name="nablaMessaging_recordVoiceMessageIcon">@drawable/nabla_ic_mic</item>
        <item name="nablaMessaging_cancelVoiceMessageIcon">@drawable/nabla_ic_trash</item>
        <item name="nablaMessaging_mediaSourceCameraPhotoIcon">@drawable/nabla_ic_camera_photo</item>
        <item name="nablaMessaging_mediaSourceCameraVideoIcon">@drawable/nabla_ic_camera_video</item>
        <item name="nablaMessaging_mediaSourceGalleryIcon">@drawable/nabla_ic_photo</item>
        <item name="nablaMessaging_mediaSourceDocumentIcon">@drawable/nabla_ic_pick_file</item>
        <item name="nablaMessaging_mediaSourceDocumentScanIcon">@drawable/nabla_ic_document_scan</item>
        <item name="nablaMessaging_conversationBackgroundColor">?android:colorBackground</item>
        <item name="nablaMessaging_conversationHeaderStyle">?toolbarSurfaceStyle</item>

        <item name="nablaMessaging_conversationMediaPickerTextAppearance">?textAppearanceBodyLarge</item>
        <item name="nablaMessaging_conversationMediaPickerIconBackground">
            @drawable/nabla_conversation_media_picker_icon_background
        </item>

    </style>

    <style name="Nabla.TextAppearance.TextMessage.Patient" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textColorLink">?colorOnPrimary</item>
        <item name="fontFamily">?fontFamily</item>
    </style>

    <style name="Nabla.TextAppearance.TextMessage.Provider" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:textColorLink">?colorPrimaryDark</item>
        <item name="fontFamily">?fontFamily</item>
    </style>

    <style name="Nabla.TextAppearance.TextMessage.Other" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textColorLink">?colorOnSurface</item>
        <item name="fontFamily">?fontFamily</item>
    </style>
</resources>