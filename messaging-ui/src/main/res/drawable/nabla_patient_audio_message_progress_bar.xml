<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="?cardCornerRadius" />
            <solid android:color="?nablaMessaging_patientMessageBackgroundColor" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="?cardCornerRadius"
                    android:topLeftRadius="?cardCornerRadius"
                    />
                <solid android:color="@color/nabla_surface_alpha_50" />
            </shape>
        </scale>
    </item>
</layer-list>
