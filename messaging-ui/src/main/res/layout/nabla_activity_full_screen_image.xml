<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/fullScreenImageTouchImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ProgressBar
        android:id="@+id/fullScreenImageProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/nabla_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/fullScreenImageBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/nabla_full_screen_media_button_background"
        android:clickable="true"
        android:contentDescription="@string/nabla_conversation_full_screen_media_close_content_description"
        android:focusable="true"
        android:padding="14dp"
        android:src="@drawable/nabla_ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorOnSurface"
        />

    <ImageView
        android:id="@+id/fullScreenImageShareButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/nabla_full_screen_media_button_background"
        android:clickable="true"
        android:contentDescription="@string/nabla_conversation_full_screen_media_share_content_description"
        android:focusable="true"
        android:padding="13dp"
        android:src="@drawable/nabla_ic_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?colorOnSurface"
        />

</androidx.constraintlayout.widget.ConstraintLayout>